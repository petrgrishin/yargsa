{
  "name": "yargsa",
  "version": "0.0.1",
  "description": "an experimental async-first version of yargs, pronounced \"yargs eh\".",
  "main": "src/index.ts",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint --fix **/*.ts",
    "check:type": "tsc --noEmit",
    "prebuild": "rimraf ./dist",
    "build": "tsc --emitDeclarationOnly && babel src --out-dir dist --extensions \".ts\" --source-maps inline"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yargs/yargsa.git"
  },
  "keywords": [
    "yargs",
    "async",
    "eh",
    "experimental"
  ],
  "author": "Ben Coe <bencoe@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yargs/yargsa/issues"
  },
  "homepage": "https://github.com/yargs/yargsa#readme",
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-typescript": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.7",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "babel-plugin-transform-typescript-metadata": "^0.2.2",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-junit": "^9.0.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
